<script>(function() {
'use strict';
const blockId = '{{ block.id }}';
const containerId = 'nusense-tryon-button-embed-' + blockId;
const buttonId = 'nusense-tryon-btn-' + blockId;
let isPositioning = false;
let lastPositionedUrl = null;
function isElementVisible(element) {
if (!element) return false;
const style = window.getComputedStyle(element);
if (style.display === 'none' || style.visibility === 'hidden' || parseFloat(style.opacity) < 0.1) {
return false;
}
if (element.disabled === true || element.hasAttribute('disabled')) {
return false;
}
if (element.offsetWidth === 0 && element.offsetHeight === 0 && style.position !== 'absolute' && style.position !== 'fixed') {
return false;
}
let parent = element.parentElement;
while (parent && parent !== document.body) {
const parentStyle = window.getComputedStyle(parent);
const parentId = String(parent.getAttribute('id') || parent.id || '');
const parentClass = String(parent.className || (parent.classList ? Array.from(parent.classList).join(' ') : ''));
if (parentStyle.display === 'none' ||
parentStyle.visibility === 'hidden' ||
(typeof parentId === 'string' && (parentId.includes('drawer') || parentId.includes('modal') || parentId.includes('popup') || parentId.includes('quick-view'))) ||
(typeof parentClass === 'string' && (parentClass.includes('drawer') || parentClass.includes('modal') || parentClass.includes('popup') || parentClass.includes('quick-view')))) {
return false;
}
parent = parent.parentElement;
}
return true;
}
function findPurchaseActionBoundary() {
console.log('[NUSENSE] Step 1: Locating product purchase boundary (invariant)...');
const allForms = Array.from(document.querySelectorAll('form[action*="/cart/add"]'));
console.log('[NUSENSE] Found', allForms.length, 'form(s) with /cart/add action');
let productForm = null;
for (const form of allForms) {
const formClass = String(form.className || '').toLowerCase();
const formId = String(form.id || '').toLowerCase();
if (formClass.includes('payment-terms') || formId.includes('payment-terms') || formId.includes('installment')) {
console.log('[NUSENSE] Skipping payment-terms/installment form:', form);
continue;
}
productForm = form;
console.log('[NUSENSE] Found main product form:', productForm);
break;
}
if (!productForm && allForms.length > 0) {
productForm = allForms[0];
console.log('[NUSENSE] Using first form as fallback:', productForm);
}
if (!productForm) {
console.warn('[NUSENSE] Product form not found - aborting');
return null;
}
console.log('[NUSENSE] Using product form:', productForm, 'ID:', productForm.id, 'Class:', productForm.className);
console.log('[NUSENSE] Step 2: Locating primary submit control (Add to Cart)...');
let submitButtons = Array.from(productForm.querySelectorAll('button[type="submit"], input[type="submit"], button:not([type]), button[form]'));
if (submitButtons.length === 0) {
console.log('[NUSENSE] No submit buttons in form, searching for buttons with form attribute...');
const formId = productForm.id;
if (formId) {
submitButtons = Array.from(document.querySelectorAll('button[form="' + formId + '"], input[form="' + formId + '"]'));
}
}
if (submitButtons.length === 0) {
console.log('[NUSENSE] No explicit submit buttons found, searching for buttons near form...');
const formParent = productForm.parentElement;
if (formParent) {
const nearbyButtons = Array.from(formParent.querySelectorAll('button'));
for (const btn of nearbyButtons) {
if (btn.form === productForm || btn.getAttribute('form') === productForm.id || (btn.onclick && btn.onclick.toString().includes('cart'))) {
submitButtons.push(btn);
}
}
}
}
if (submitButtons.length === 0) {
console.log('[NUSENSE] No buttons found, using form as fallback target');
const formParent = productForm.parentElement;
if (formParent && formParent !== document.body && formParent !== document.documentElement) {
return {
isGroup: false,
insertTarget: productForm,
insertParent: formParent
};
}
console.warn('[NUSENSE] Cannot determine insertion point - aborting');
return null;
}
const visibleSubmitButtons = submitButtons.filter(btn => {
if (!isElementVisible(btn)) return false;
if (btn.disabled) return false;
if (btn.getAttribute('aria-hidden') === 'true') return false;
return true;
});
if (visibleSubmitButtons.length === 0) {
console.log('[NUSENSE] No visible submit buttons found, using form as fallback target');
const formParent = productForm.parentElement;
if (formParent && formParent !== document.body && formParent !== document.documentElement) {
return {
isGroup: false,
insertTarget: productForm,
insertParent: formParent
};
}
console.warn('[NUSENSE] Cannot determine insertion point - aborting');
return null;
}
console.log('[NUSENSE] Found', visibleSubmitButtons.length, 'visible submit button(s)');
const primarySubmitButton = visibleSubmitButtons[0];
console.log('[NUSENSE] Step 3: Detecting button group vs single button...');
const buttonParent = primarySubmitButton.parentElement;
console.log('[NUSENSE] Button parent element:', buttonParent, 'Tag:', buttonParent.tagName);
if (visibleSubmitButtons.length === 1) {
console.log('[NUSENSE] Only one submit button found, checking for other action buttons in parent...');
const allButtonsInParent = Array.from(buttonParent.querySelectorAll('button, input[type="submit"], input[type="button"]'));
const visibleButtonsInParent = allButtonsInParent.filter(btn => {
if (!isElementVisible(btn)) return false;
if (btn.disabled) return false;
if (btn.getAttribute('aria-hidden') === 'true') return false;
if (btn.type === 'button' && !btn.onclick && !btn.getAttribute('data-action')) {
const btnText = (btn.textContent || '').toLowerCase().trim();
if (!btnText || btnText.length < 3) return false;
}
return true;
});
console.log('[NUSENSE] Found', visibleButtonsInParent.length, 'total visible buttons in parent container');
if (visibleButtonsInParent.length >= 2) {
console.log('[NUSENSE] Case B: Multiple buttons detected in parent container - treating as button group');
return {
isGroup: true,
insertTarget: buttonParent,
insertParent: buttonParent.parentElement,
buttons: visibleButtonsInParent
};
}
console.log('[NUSENSE] Case A: Single button detected in parent container');
return {
isGroup: false,
insertTarget: primarySubmitButton,
insertParent: buttonParent
};
}
console.log('[NUSENSE] Case B: Multiple submit buttons detected - finding shared container...');
const buttonGroup = primarySubmitButton.closest('div, section, fieldset');
if (!buttonGroup || buttonGroup === document.body || buttonGroup === document.documentElement) {
console.log('[NUSENSE] No shared container found, using first button parent');
return {
isGroup: false,
insertTarget: primarySubmitButton,
insertParent: buttonParent
